doctype html
html(lang='en')
    include ../../components/header-files
    body
        include ../../components/loader
        // page-wrapper Start
        .page-wrapper
          .container-fluid
            // Reset Password page start
            .authentication-main.mt-0
              .row
                .col-md-12.p-0
                  .auth-innerright.auth-minibox
                    .authentication-box.auth-minibox1
                      .text-center
                        img(src='../assets/images/other-images/cuba-logo1.png', alt='')
                      .card.mt-4.p-4
                        form.theme-form
                          h5.f-16.mb-3.f-w-600 CREATE YOUR PASSWORD
                          .form-group
                            label.col-form-label New Password
                            input.form-control(type='password', placeholder='*****')
                          .form-group
                            label.col-form-label Retype Password
                            input.form-control(type='password', placeholder='*****')
                          .form-group.row.mb-0
                            .col-md-2
                              button.btn.btn-primary(type='submit') Done
            // Reset Password page end
        // page-wrapper Ends
        include ../../components/footer-files
